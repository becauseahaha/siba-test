extends pug/base
include components/form-field/form-field
include components/select/select
include components/counter/counter
include components/form-checkbox/form-checkbox
include components/form-radio/form-radio
include components/breadcrumbs/breadcrumbs
include components/pagination/pagination
include components/file-upload/file-upload
include components/slider-arrow/slider-arrow

append vars
	- title = 'UiKit'

block content
	style.
		.elem {
			margin-bottom: 80px;
		}

		.row {
			display: inline-flex;
		}
		.row .col {
			margin-right: 25px;
		}
		.button .row {
			max-width: 588px;
			margin: 0 0 16px;
		}

		.button .row .col {
			max-width: 160px;
			width: 100%;
			margin: 0 10px;
		}

		.input .row {
			max-width: 730px;
			margin: 0 0 37px;
		}

		.elem {
			width: 100%;
		}

		.input .row .col,.select .row .col {
			max-width: 350px;
			width: 100%;
			margin: 10px;
		}

		.input {
			margin: 0 -10px;
		}
		.modal-form__btn {
			margin-top: 20px;
		}

		.checkbox .row {
			max-width: 350px;
		}

		.select .row {
			max-width: 730px;
		}

		.tooltip .icon {
			color: #212429;
			fill: transparent;
			width: 24px;
			height: 24px;
		}

		.tooltip .icon svg {
			width: 100%;
			height: 100%;
		}

		.links .row {
			max-width: 500px;
			margin-bottom: 20px;
		}

		.links .row .col{
			margin-right: 78px;
		}

		.nav .row {
			max-width: 250px;
			align-items: center;
		}
		.block-popup .row {
			justify-content: flex-start;
		}
		.block-popup .row .col{
			width: auto;
			max-width: none;
			margin-left: 0;
			margin-right: 30px;
		}
		
		.fx-item {
			width: calc(100% - 300px)
		}
		.fb-wrap {
			margin-bottom: 80px;
		}
		.fb-wrap:last-child {
			margin-bottom: 0px;
		}
		.w15 {
			width: 300px;
		}
		.fx-item:first-child h3 {
			margin-top: 0;
		}
		.fx-item h1:first-child {
			margin-top: 0;
		}
		.color {
			display: flex;
		}
		.color-box {
			width: 120px;
			height: 120px;
			border-radius: 8px;
			margin-right: 22px;
		}
		.color-line {
			width: 120px;
			height: 54px;
		}
		.typography__line {
			position: relative;
			margin-bottom: 30px;
		}
		.typography__name {
			width: 100px;
			position: absolute;
			top: 50%;
			transform: translateY(-50%);
			left: 0;
			color: #CACACA;
			font-size: 12px;
		}
		.typography__flex {
			display: flex;
			margin-bottom: 20px;
		}
		.typography__unit {
			margin-right: 50px;
		}
		.typography__unit:last-child {
			margin-right: 0;
		}
		.typography h1,
		.typography h2,
		.typography h3,
		.typography h4,
		.typography h5,
		.typography h6,
		.typography p,
		.typography small {
			margin-top: 0;
			margin-bottom: 30px;
		}
		.icons  {
			justify-content: flex-start !important;
		}
		.icon-wrap .col-icon {
			width: 24px;
			height: 24px;
			margin: 0 10px;
		}
		.icon-wrap .fx-item {
			margin-right: 70px;
		}
		.icon-wrap {
			align-items: center;
		}
		.col-soc {
			margin: 10px;
		}
		.link-wrap .col {
			margin-right: 50px;
			margin-bottom: 50px;
		}

	section.theme-dark.js-anim

