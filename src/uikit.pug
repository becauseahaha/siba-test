	section.sec.sec--line
		.wrapper
			.fb-wrap
				h3 Кнопки
				a.btn(href="#") 
					span Каталог
				.typography__line
				a.btn.btn--blue(href="#") 
					span Акции
					.btn__shadow
				.typography__line
				a.btn.btn--bor-white(href="#") 
					span Забронировать
				.typography__line
				a.btn.btn--icon(href="#")
					+svg('send')(width="24" height="24")
				.typography__line
				a.btn.btn--icon.btn--blue(href="#")
					+svg('search')(width="24" height="24")
				.typography__line
				a.btn-play(href="#")
					+svg('play')
					+svg('play-hov').btn-play__hov
				.typography__line
				a.btn.btn--small(href='#')
					span Забронировать
				.typography__line
				a.btn.btn--middle(href='#')
					span Забронировать
				.typography__line
				a.btn.btn--large(href='#')
					span Забронировать
				.typography__line
				a.btn.btn--arrow.btn--blue(href='#')
					+svg('basket')
					span Корзина

						

			.fb-wrap
				h2 Ссылки
				.typography__line
					a.link(href="#") Ссылка
				.typography__line
					a.link.link--default(href="#") Ссылка
				.typography__line
					a.link.link--bor(href="#") Ссылка
				.typography__line
					a.link.link--bor.link--bor--white(href="#") Ссылка
				.typography__line
					a.link.link--bor.link--bor--white.link--white(href="#") Ссылка
				.typography__line
					a.link.link--white-mark(href="#") Ссылка

			.fb-wrap
				h2 Формы
				form.form.js-form(action="#" method="GET" data-thank="#popup-thank" style="max-width: 500px")
					.form__line
						+form-field({
							input: true,
							label: 'Ваше имя',
							type: 'text',
							name: 'name',
							msg: 'Обязательное поле',
							req: true,
						})
					.form__line
						+form-field({
							input: true,
							label: 'Ваш телефон',
							type: 'tel',
							name: 'phone',
							cl: 'js-phone',
							msg: '',
							mask: '+7-(___)-___-____',
							slots: '_',
							min: '11',
							req: true,
						})
					.form__line
						+form-field({
							input: true,
							label: 'Ваш email',
							type: 'email',
							name: 'email',
							msg: '',
							req: true,
						})
					.form__line
						+select({
							className: 'js-select',
							name: 'region',
							label: 'Ваш регион',
							options: ['Москва', 'Краснодар', 'Оренбург'],
							optionsValue: ['0', '1', '2']
						})
					.form__line
						+select({
							className: 'js-select',
							name: 'old',
							label: 'Ваш возраст',
							options: ['20-30', '30-40', '40-50'],
							optionsValue: ['0', '1', '2']
						})
					.form__line
						+form-field({
							textarea: true,
							label: 'Вашу сообщение',
							name: 'message',
							cl: 'form-field__textarea',
							msg: '',
							req: true,
						})
					.form__line.form__line--flex 
						.form__column 
							+form-radio({ name:'modification', text: 'Вариант 1'})
						.form__column
							+form-radio({ name:'modification', text: 'Вариант 2'})
					.form__line
						+form-checkbox({ text:'Принимаю условия <a href="#" target="_blank" class="link link--blue">использования информации</a>', checked: true, clCheck: 'js-checkbox-rules'})
					.form__line
						button.btn.btn--middle.js-form-submit(type="submit") 
							span Отправить
							.btn__shadow

				

